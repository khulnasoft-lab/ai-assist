{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gitlab.com/ai/prompt.json",
  "title": "AI model prompt",
  "description": "A request that prompts an AI model to provide an answer to a question, given a list of prompt elements.",
  "type": "object",
  "properties": {
    "prompt_components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "description": "Indicates what kind of payload is being transmitted",
            "enum": [
              "prompt"
            ]
          },
          "metadata": {
            "type": "object",
            "description": "Carries information about the source from which the payload originates",
            "properties": {
              "source": {
                "type": "string",
                "description": "The source of this data (e.g. gitlab-saas, gitlab-vscode-extension)"
              },
              "version": {
                "type": "string",
                "description": "The source software version string (e.g. x.y.z or build ID)"
              }
            },
            "required": [
              "source",
              "version"
            ]
          },
          "payload": {
            "type": "object",
            "description": "The actual payload carrying model inputs. Contents vary with source and type."
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "prompt"
                }
              }
            },
            "then": {
              "properties": {
                "payload": {
                  "required": [
                    "content",
                    "provider",
                    "model"
                  ]
                }
              }
            }
          }
        ],
        "required": [
          "type",
          "metadata",
          "payload"
        ]
      }
    }
  },
  "required": [
    "prompt_components"
  ]
}